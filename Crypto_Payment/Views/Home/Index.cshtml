@{
    ViewData["Title"] = "Dashboard";
    var totalCustomers = ViewBag.TotalCustomers ?? 0;
    var totalInvoices = ViewBag.TotalInvoices ?? 0;
    var totalInvoiceAmount = ViewBag.TotalInvoiceAmount ?? 0m;
    var recentInvoices = ViewBag.RecentInvoices as List<Crypto_Payment.DTOS.InvoiceDto> ?? new List<Crypto_Payment.DTOS.InvoiceDto>();
}

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Dashboard</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->

    <!-- İstatistik Kartları -->
    <div class="row">
        <div class="col-xl-4 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Toplam Müşteri</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4"><span class="counter-value" data-target="@totalCustomers">0</span></h4>
                            <a href="/customers" class="text-decoration-underline text-muted">Müşterileri Görüntüle</a>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle rounded fs-3">
                                <i class="ri-user-line text-primary"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Toplam Fatura</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4"><span class="counter-value" data-target="@totalInvoices">0</span></h4>
                            <a href="/invoices" class="text-decoration-underline text-muted">Faturaları Görüntüle</a>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-success-subtle rounded fs-3">
                                <i class="ri-file-list-3-line text-success"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Toplam Tutar</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4">$<span class="counter-value" data-target="@totalInvoiceAmount">0</span></h4>
                            <a href="/invoices/invoice-add" class="text-decoration-underline text-muted">Yeni Fatura Oluştur</a>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-warning-subtle rounded fs-3">
                                <i class="ri-money-dollar-circle-line text-warning"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <!-- Son Faturalar -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Son Faturalar</h4>
                    <div class="flex-shrink-0">
                        <a href="/invoices" class="btn btn-soft-primary btn-sm">
                            Tümünü Gör <i class="ri-arrow-right-line align-middle"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive table-card">
                        <table class="table table-hover table-centered align-middle mb-0">
                            <thead class="text-muted table-light">
                                <tr>
                                    <th scope="col">Sipariş No</th>
                                    <th scope="col">Müşteri</th>
                                    <th scope="col">Para Birimi</th>
                                    <th scope="col">Tutar</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (recentInvoices != null && recentInvoices.Any())
                                {
                                    foreach (var invoice in recentInvoices)
                                    {
                                        var statusClass = invoice.Status switch
                                        {
                                            "completed" => "success",
                                            "pending" => "warning",
                                            "expired" => "danger",
                                            "cancelled" => "secondary",
                                            _ => "info"
                                        };
                                        var statusText = invoice.Status switch
                                        {
                                            "completed" => "Ödendi",
                                            "pending" => "Bekliyor",
                                            "expired" => "Süresi Doldu",
                                            "cancelled" => "İptal",
                                            _ => "Yeni"
                                        };
                                        <tr>
                                            <td>
                                                <span class="fw-medium">@invoice.OrderNumber</span>
                                            </td>
                                            <td>@invoice.OrderName</td>
                                            <td>
                                                <span class="badge bg-info-subtle text-info">@invoice.SourceCurrency → @invoice.Currency</span>
                                            </td>
                                            <td>
                                                <span class="text-success fw-medium">$@invoice.SourceAmount</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@statusClass-subtle text-@statusClass">@statusText</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(invoice.InvoiceUrl))
                                                {
                                                    <a href="@invoice.InvoiceUrl" target="_blank" class="btn btn-sm btn-success">
                                                        <i class="ri-external-link-line"></i> Ödeme
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            <i class="ri-file-list-3-line fs-24 mb-2 d-block"></i>
                                            Henüz fatura bulunmuyor.
                                            <br>
                                            <a href="/invoices/invoice-add" class="btn btn-primary btn-sm mt-2">İlk Faturanı Oluştur</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <!-- Hızlı İşlemler -->
    <div class="row">
        <div class="col-xl-4 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-md mx-auto mb-3">
                        <span class="avatar-title bg-primary-subtle rounded-circle fs-1">
                            <i class="ri-user-add-line text-primary"></i>
                        </span>
                    </div>
                    <h5 class="card-title">Yeni Müşteri</h5>
                    <p class="text-muted mb-3">Sisteme yeni müşteri ekleyin</p>
                    <a href="/customers" class="btn btn-primary">Müşteri Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-md mx-auto mb-3">
                        <span class="avatar-title bg-success-subtle rounded-circle fs-1">
                            <i class="ri-file-add-line text-success"></i>
                        </span>
                    </div>
                    <h5 class="card-title">Yeni Fatura</h5>
                    <p class="text-muted mb-3">Crypto ödeme faturası oluşturun</p>
                    <a href="/invoices/invoice-add" class="btn btn-success">Fatura Oluştur</a>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-md mx-auto mb-3">
                        <span class="avatar-title bg-info-subtle rounded-circle fs-1">
                            <i class="ri-list-check text-info"></i>
                        </span>
                    </div>
                    <h5 class="card-title">Fatura Listesi</h5>
                    <p class="text-muted mb-3">Tüm faturaları görüntüleyin</p>
                    <a href="/invoices" class="btn btn-info">Faturaları Gör</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

</div>
