    <link href="~/admin/velzon-dist/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Layout config Js -->
    <script src="~/admin/velzon-dist/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/admin/velzon-dist/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/admin/velzon-dist/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/admin/velzon-dist/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/admin/velzon-dist/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
    
    <style>
        /* Menü toggle düzeltmeleri */
        .hamburger-icon {
            cursor: pointer;
        }
        
        .hamburger-icon span {
            display: block;
            width: 22px;
            height: 2px;
            background-color: #495057;
            margin: 6px 0;
            transition: 0.3s;
        }
        
        /* Sidebar açık/kapalı durumu */
        [data-sidebar-size="sm"] .app-menu {
            width: 70px;
        }
        
        [data-sidebar-size="sm"] .app-menu .menu-title,
        [data-sidebar-size="sm"] .app-menu .nav-link span,
        [data-sidebar-size="sm"] .app-menu .menu-dropdown {
            display: none;
        }
        
        [data-sidebar-size="sm"] .main-content {
            margin-left: 70px;
        }
        
        /* Mobil menü overlay */
        .vertical-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.35);
            z-index: 1002;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        
        body.vertical-sidebar-enable .vertical-overlay {
            opacity: 1;
            visibility: visible;
        }
        
        /* Mobil menü */
        @@media (max-width: 991.98px) {
            .app-menu {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }
            
            body.vertical-sidebar-enable .app-menu {
                transform: translateX(0);
            }
            
            .main-content {
                margin-left: 0 !important;
            }
        }
        
        /* Menü öğeleri */
        .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            padding: 0.625rem 1.5rem;
            color: rgba(255, 255, 255, 0.5);
            transition: all 0.3s ease;
        }
        
        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            color: #fff;
        }
        
        .navbar-nav .nav-link i {
            font-size: 1.1rem;
            margin-right: 0.5rem;
            min-width: 1.75rem;
        }
        
        .menu-dropdown {
            padding-left: 0;
        }
        
        .menu-dropdown .nav-link {
            padding-left: 3.5rem;
            font-size: 0.875rem;
        }
        
        .menu-dropdown .nav-link i {
            font-size: 0.5rem;
        }
        
        .menu-title {
            padding: 0.75rem 1.5rem;
            font-size: 0.6875rem;
            text-transform: uppercase;
            color: rgba(255, 255, 255, 0.4);
            font-weight: 600;
            letter-spacing: 0.05em;
        }
    </style>
</head>
<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        <header id="page-topbar">
            <div class="layout-width">
                <div class="navbar-header">
                    <div class="d-flex">
                        <!-- LOGO -->
                        <div class="navbar-brand-box horizontal-logo">
                            <a href="/" class="logo logo-dark">
                                <span class="logo-sm">
                                    <img src="~/admin/velzon-dist/assets/images/logo-sm.png" alt="" height="22">
                                </span>
                                <span class="logo-lg">
                                    <img src="~/admin/velzon-dist/assets/images/logo-dark.png" alt="" height="17">
                                </span>
                            </a>
                            <a href="/" class="logo logo-light">
                                <span class="logo-sm">
                                    <img src="~/admin/velzon-dist/assets/images/logo-sm.png" alt="" height="22">
                                </span>
                                <span class="logo-lg">
                                    <img src="~/admin/velzon-dist/assets/images/logo-light.png" alt="" height="17">
                                </span>
                            </a>
                        </div>

                        <button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger" id="topnav-hamburger-icon">
                            <span class="hamburger-icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
