@{
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4 card-bg-fill">
                <div class="card-body p-4 text-center">

                    <h4 class="text-success mb-2">Kayıt başarılı ✅</h4>
                    <p class="text-muted mb-4">
                        Email adresine doğrulama linki gönderdik. Lütfen gelen kutunu (ve spam) kontrol et.
                        Doğrulamadan giriş yapamazsın.
                    </p>

                    <a class="btn btn-success w-100" href="/api/auth/login">Giriş Sayfasına Git</a>

                    <div class="mt-3">
                        <small class="text-muted">
                            Mail gelmediyse biraz bekle veya spam klasörüne bak.
                        </small>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

