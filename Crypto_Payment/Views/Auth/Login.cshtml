@{
    var returnUrl = (string?)ViewData["ReturnUrl"] ?? Context.Request.Query["ReturnUrl"].ToString();
}
@{
    ViewBag.Title = "title";
    Layout = "_AuthLayout";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center mt-sm-5 mb-4 text-white-50">
                <div>
                    <a href="index.html" class="d-inline-block auth-logo">
                        <img src="assets/images/logo-light.png" alt="" height="20">
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4 card-bg-fill">

                <div class="card-body p-4">
                    <div class="text-center mt-2">
                        <h5 class="text-primary">WandaPlay'e Giriş Yapın</h5>
                    </div>
                    <div class="p-2 mt-4">
                        <form id="loginForm" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="email" class="form-control" id="email" name="Email" placeholder="E-posta Girin" required>
                                <div class="invalid-feedback">Geçerli bir email girin</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password-input">Şifre</label>
                                <div class="position-relative auth-pass-inputgroup mb-3">
                                    <input type="password" class="form-control pe-5 password-input" id="password-input" name="Password" placeholder="Şifre" required>
                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon material-shadow-none" type="button" id="password-addon">
                                        <i class="ri-eye-fill align-middle"></i>
                                    </button>
                                    <div class="invalid-feedback">Şifre girin</div>
                                </div>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="auth-remember-check">
                                <label class="form-check-label" for="auth-remember-check">Beni Hatırla</label>
                            </div>

                            <div class="mt-3" id="apiError" style="display:none;"></div>

                            <div class="mt-4">
                                <button class="btn btn-success w-100" type="submit">Giriş Yap</button>
                            </div>
                        </form>

                    </div>
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->

            <div class="mt-4 text-center">
                <p class="mb-0">Hesabınız Yok mu ? <a href="/api/auth/register" class="fw-semibold text-primary text-decoration-underline"> Üye Ol </a> </p>
            </div>

        </div>
    </div>
    <!-- end row -->
</div>
<!-- end container -->

@section Scripts {
    <script>
        (() => {
          'use strict';
        
          const form = document.getElementById('loginForm');
          const apiError = document.getElementById('apiError');
        
          form.addEventListener('submit', async (e) => {
            e.preventDefault();
            e.stopPropagation();
        
            if (!form.checkValidity()) {
              form.classList.add('was-validated');
              return;
            }
        
            apiError.style.display = 'none';
            apiError.className = '';
            apiError.innerText = '';
        
            const payload = {
              email: document.getElementById('email').value.trim(),
              password: document.getElementById('password-input').value,
              rememberMe: document.getElementById('auth-remember-check').checked
            };
            
              const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

              try {
              const res = await fetch('/api/auth/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                body: JSON.stringify(payload)
              });
        
              // Backend ne yapıyorsa yapsın
              if (!res.ok) {
                const data = await res.json().catch(() => ({}));
                apiError.style.display = 'block';
                apiError.className = 'alert alert-danger';
                apiError.innerText = data.title || 'Giriş başarısız.';
              }

              const raw = await res.text();
              let data = {};
              try { data = JSON.parse(raw); } catch {}

              if (data.twoFactorRequired) {
                  window.location.href = data.redirectUrl || '/auth/twofactor';
                  return;
              }

              window.location.href = data.redirectUrl || '/';
        
            } catch {
              apiError.style.display = 'block';
              apiError.className = 'alert alert-danger';
              apiError.innerText = 'Sunucuya ulaşılamadı.';
            }
          });
        })();
        </script>
}
