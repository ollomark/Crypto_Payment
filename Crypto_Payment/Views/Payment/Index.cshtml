@model Crypto_Payment.DTOS.PaymentViewModel
@{
    ViewData["Title"] = "Ödeme";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ödeme - @Model.OrderNumber</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1e293b;
            --gray: #64748b;
            --light: #f8fafc;
            --border: #e2e8f0;
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e1e2e 0%, #2d2d44 100%);
            min-height: 100vh;
            color: #fff;
        }
        
        .payment-container { max-width: 480px; margin: 0 auto; padding: 20px; min-height: 100vh; display: flex; flex-direction: column; }
        .header { text-align: center; padding: 20px 0; }
        .logo { font-size: 24px; font-weight: 700; color: #fff; display: flex; align-items: center; justify-content: center; gap: 10px; }
        .logo i { font-size: 32px; color: var(--primary); }
        .order-info { background: rgba(255,255,255,0.05); border-radius: 16px; padding: 20px; margin-bottom: 20px; }
        .order-number { font-size: 14px; color: var(--gray); margin-bottom: 5px; }
        .order-name { font-size: 18px; font-weight: 600; }
        .amount-section { text-align: center; padding: 30px 0; }
        .amount-label { font-size: 14px; color: var(--gray); margin-bottom: 10px; }
        .amount { font-size: 48px; font-weight: 700; color: var(--primary); }
        .amount-crypto { font-size: 24px; color: var(--gray); margin-top: 5px; }
        .payment-card { background: rgba(255,255,255,0.08); border-radius: 20px; padding: 25px; flex: 1; }
        .network-badge { display: inline-flex; align-items: center; gap: 8px; background: var(--primary); color: #fff; padding: 8px 16px; border-radius: 20px; font-size: 14px; font-weight: 500; margin-bottom: 20px; }
        .qr-section { text-align: center; margin-bottom: 25px; }
        .qr-code { background: #fff; padding: 15px; border-radius: 16px; display: inline-block; }
        .qr-code img { width: 180px; height: 180px; }
        .wallet-section { margin-bottom: 25px; }
        .wallet-label { font-size: 12px; color: var(--gray); margin-bottom: 8px; text-transform: uppercase; letter-spacing: 1px; }
        .wallet-address { background: rgba(0,0,0,0.3); border-radius: 12px; padding: 15px; display: flex; align-items: center; gap: 10px; }
        .wallet-address code { flex: 1; font-size: 13px; word-break: break-all; color: #fff; }
        .copy-btn { background: var(--primary); border: none; color: #fff; width: 40px; height: 40px; border-radius: 10px; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s; }
        .copy-btn:hover { background: var(--primary-dark); }
        .copy-btn.copied { background: var(--success); }
        .timer-section { text-align: center; padding: 20px; background: rgba(0,0,0,0.2); border-radius: 12px; margin-bottom: 20px; }
        .timer-label { font-size: 12px; color: var(--gray); margin-bottom: 8px; }
        .timer { font-size: 32px; font-weight: 700; font-family: 'Courier New', monospace; }
        .timer.warning { color: var(--warning); }
        .timer.danger { color: var(--danger); }
        .status-section { text-align: center; padding: 15px; border-radius: 12px; margin-bottom: 20px; }
        .status-pending { background: rgba(245, 158, 11, 0.2); color: var(--warning); }
        .status-completed { background: rgba(16, 185, 129, 0.2); color: var(--success); }
        .status-expired { background: rgba(239, 68, 68, 0.2); color: var(--danger); }
        .status-icon { font-size: 24px; margin-bottom: 5px; }
        .footer-info { text-align: center; padding: 20px 0; color: var(--gray); font-size: 12px; }
        .footer-info a { color: var(--primary); text-decoration: none; }
        .pulse { animation: pulse 2s infinite; }
        @@keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="header">
            <div class="logo">
                <i class="ri-wallet-3-fill"></i>
                <span>CryptoPayment</span>
            </div>
        </div>
        
        <div class="order-info">
            <div class="order-number">Sipariş No: @Model.OrderNumber</div>
            <div class="order-name">@Model.OrderName</div>
        </div>
        
        <div class="amount-section">
            <div class="amount-label">Ödenecek Tutar</div>
            <div class="amount">@Model.SourceAmount.ToString("N2") @Model.SourceCurrency</div>
            @if (!string.IsNullOrEmpty(Model.CryptoAmount))
            {
                <div class="amount-crypto">≈ @Model.CryptoAmount @Model.CryptoCurrency</div>
            }
        </div>
        
        <div class="payment-card">
            <div class="text-center">
                <span class="network-badge">
                    <i class="ri-coin-fill"></i>
                    @Model.Network
                </span>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.QrCodeUrl))
            {
                <div class="qr-section">
                    <div class="qr-code">
                        <img src="@Model.QrCodeUrl" alt="QR Code" />
                    </div>
                </div>
            }
            
            <div class="wallet-section">
                <div class="wallet-label">Cüzdan Adresi</div>
                <div class="wallet-address">
                    <code id="walletAddress">@Model.WalletAddress</code>
                    <button class="copy-btn" onclick="copyAddress()" title="Kopyala">
                        <i class="ri-file-copy-line" id="copyIcon"></i>
                    </button>
                </div>
            </div>
            
            @if (Model.ExpireTime.HasValue)
            {
                <div class="timer-section">
                    <div class="timer-label">Kalan Süre</div>
                    <div class="timer" id="countdown">--:--</div>
                </div>
            }
            
            <div class="status-section status-@Model.Status.ToLower()" id="statusSection">
                @if (Model.Status == "pending")
                {
                    <div class="status-icon pulse"><i class="ri-time-line"></i></div>
                    <div>Ödeme Bekleniyor</div>
                }
                else if (Model.Status == "completed")
                {
                    <div class="status-icon"><i class="ri-checkbox-circle-fill"></i></div>
                    <div>Ödeme Tamamlandı</div>
                }
                else if (Model.Status == "expired")
                {
                    <div class="status-icon"><i class="ri-close-circle-fill"></i></div>
                    <div>Süre Doldu</div>
                }
            </div>
        </div>
        
        <div class="footer-info">
            <p>Ödeme işlemi <a href="https://plisio.net" target="_blank">Plisio</a> altyapısı ile güvence altındadır.</p>
            <p>İşlem ID: @Model.TxnId</p>
        </div>
    </div>
    
    <script>
        function copyAddress() {
            var address = document.getElementById('walletAddress').textContent;
            navigator.clipboard.writeText(address).then(function() {
                var btn = document.querySelector('.copy-btn');
                var icon = document.getElementById('copyIcon');
                btn.classList.add('copied');
                icon.className = 'ri-check-line';
                setTimeout(function() {
                    btn.classList.remove('copied');
                    icon.className = 'ri-file-copy-line';
                }, 2000);
            });
        }
        
        @if (Model.ExpireTime.HasValue)
        {
            @:var expireTime = new Date('@Model.ExpireTime.Value.ToString("yyyy-MM-ddTHH:mm:ssZ")').getTime();
            @:var countdownInterval = setInterval(updateCountdown, 1000);
            @:updateCountdown();
            @:function updateCountdown() {
            @:    var now = new Date().getTime();
            @:    var distance = expireTime - now;
            @:    if (distance <= 0) {
            @:        document.getElementById('countdown').innerHTML = "00:00";
            @:        document.getElementById('countdown').classList.add('danger');
            @:        clearInterval(countdownInterval);
            @:        checkStatus();
            @:        return;
            @:    }
            @:    var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            @:    var seconds = Math.floor((distance % (1000 * 60)) / 1000);
            @:    var display = String(minutes).padStart(2, '0') + ':' + String(seconds).padStart(2, '0');
            @:    document.getElementById('countdown').innerHTML = display;
            @:    if (distance < 300000) { document.getElementById('countdown').classList.add('warning'); }
            @:    if (distance < 60000) { document.getElementById('countdown').classList.remove('warning'); document.getElementById('countdown').classList.add('danger'); }
            @:}
        }
        
        function checkStatus() {
            fetch('/api/invoice/@Model.InvoiceId/status')
                .then(function(response) { return response.json(); })
                .then(function(data) {
                    if (data.status !== '@Model.Status') {
                        location.reload();
                    }
                })
                .catch(function(err) { console.log('Status check failed'); });
        }
        
        setInterval(checkStatus, 30000);
    </script>
</body>
</html>
