@model Crypto_Payment.DTOS.PaymentViewModel
@{
    ViewData["Title"] = "Ödeme";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ödeme - @Model.OrderNumber</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1e293b;
            --gray: #64748b;
            --light: #f8fafc;
            --border: #e2e8f0;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e1e2e 0%, #2d2d44 100%);
            min-height: 100vh;
            color: #fff;
        }
        
        .payment-container {
            max-width: 480px;
            margin: 0 auto;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        
        .header {
            text-align: center;
            padding: 20px 0;
        }
        
        .logo {
            font-size: 24px;
            font-weight: 700;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .logo i {
            font-size: 32px;
            color: var(--primary);
        }
        
        .main-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
            flex: 1;
        }
        
        .amount-section {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            padding: 30px;
            text-align: center;
        }
        
        .amount-label {
            font-size: 14px;
            opacity: 0.8;
            margin-bottom: 8px;
        }
        
        .amount-value {
            font-size: 48px;
            font-weight: 700;
            line-height: 1.2;
        }
        
        .amount-crypto {
            font-size: 16px;
            opacity: 0.9;
            margin-top: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .crypto-icon {
            width: 24px;
            height: 24px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            border-radius: 50px;
            font-size: 13px;
            font-weight: 600;
            margin-top: 15px;
        }
        
        .status-pending {
            background: rgba(245, 158, 11, 0.2);
            color: #fbbf24;
        }
        
        .status-completed {
            background: rgba(16, 185, 129, 0.2);
            color: #34d399;
        }
        
        .status-expired {
            background: rgba(239, 68, 68, 0.2);
            color: #f87171;
        }
        
        .qr-section {
            padding: 30px;
            text-align: center;
        }
        
        .qr-container {
            background: #fff;
            padding: 20px;
            border-radius: 16px;
            display: inline-block;
            margin-bottom: 20px;
        }
        
        .qr-container img {
            width: 200px;
            height: 200px;
        }
        
        .address-section {
            padding: 0 30px 30px;
        }
        
        .address-label {
            font-size: 12px;
            color: var(--gray);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }
        
        .address-box {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            padding: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .address-text {
            flex: 1;
            font-family: 'Monaco', 'Consolas', monospace;
            font-size: 12px;
            word-break: break-all;
            color: #94a3b8;
        }
        
        .copy-btn {
            background: var(--primary);
            border: none;
            border-radius: 8px;
            padding: 10px 15px;
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 13px;
        }
        
        .copy-btn:hover {
            background: var(--primary-dark);
            transform: scale(1.05);
        }
        
        .copy-btn.copied {
            background: var(--success);
        }
        
        .details-section {
            padding: 0 30px 30px;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            color: var(--gray);
            font-size: 14px;
        }
        
        .detail-value {
            font-weight: 600;
            font-size: 14px;
        }
        
        .timer-section {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin: 0 30px 30px;
            text-align: center;
        }
        
        .timer-label {
            font-size: 12px;
            color: var(--warning);
            margin-bottom: 5px;
        }
        
        .timer-value {
            font-size: 24px;
            font-weight: 700;
            color: #fbbf24;
            font-family: 'Monaco', monospace;
        }
        
        .footer-section {
            padding: 20px 30px;
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .footer-text {
            font-size: 12px;
            color: var(--gray);
        }
        
        .footer-text i {
            color: var(--success);
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            color: var(--gray);
            text-decoration: none;
            font-size: 14px;
            margin-top: 15px;
            transition: color 0.3s ease;
        }
        
        .back-link:hover {
            color: #fff;
        }
        
        .network-badge {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            background: rgba(99, 102, 241, 0.2);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            color: #a5b4fc;
            margin-top: 10px;
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .completed-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(16, 185, 129, 0.95);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border-radius: 16px;
        }
        
        .completed-icon {
            font-size: 64px;
            margin-bottom: 15px;
        }
        
        .completed-text {
            font-size: 24px;
            font-weight: 700;
        }
        
        @@media (max-width: 480px) {
            .payment-container {
                padding: 10px;
            }
            
            .amount-value {
                font-size: 36px;
            }
            
            .qr-container img {
                width: 160px;
                height: 160px;
            }
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="header">
            <div class="logo">
                <i class="ri-bit-coin-line"></i>
                CryptoPayment
            </div>
        </div>
        
        <div class="main-card">
            <div class="amount-section">
                <div class="amount-label">Ödenecek Tutar</div>
                <div class="amount-value">@Model.CryptoAmount @Model.CryptoCurrency</div>
                <div class="amount-crypto">
                    <span>≈ @Model.SourceAmount.ToString("N2") @Model.SourceCurrency</span>
                </div>
                <div class="network-badge">
                    <i class="ri-global-line"></i>
                    @Model.Network Ağı
                </div>
                
                @if (Model.Status == "pending")
                {
                    <span class="status-badge status-pending">
                        <i class="ri-time-line pulse"></i>
                        Ödeme Bekleniyor
                    </span>
                }
                else if (Model.Status == "completed")
                {
                    <span class="status-badge status-completed">
                        <i class="ri-check-line"></i>
                        Ödeme Tamamlandı
                    </span>
                }
                else if (Model.Status == "expired")
                {
                    <span class="status-badge status-expired">
                        <i class="ri-close-line"></i>
                        Süre Doldu
                    </span>
                }
            </div>
            
            @if (Model.Status == "pending")
            {
                <div class="timer-section">
                    <div class="timer-label">Kalan Süre</div>
                    <div class="timer-value" id="countdown">--:--</div>
                </div>
                
                <div class="qr-section">
                    <div class="qr-container" style="position: relative;">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Model.WalletAddress" alt="QR Code" />
                    </div>
                    <p style="font-size: 13px; color: var(--gray);">QR kodu tarayarak ödeme yapabilirsiniz</p>
                </div>
                
                <div class="address-section">
                    <div class="address-label">Cüzdan Adresi</div>
                    <div class="address-box">
                        <span class="address-text" id="wallet-address">@Model.WalletAddress</span>
                        <button class="copy-btn" onclick="copyAddress()">
                            <i class="ri-file-copy-line"></i>
                            <span id="copy-text">Kopyala</span>
                        </button>
                    </div>
                </div>
            }
            
            <div class="details-section">
                <div class="detail-row">
                    <span class="detail-label">Fatura No</span>
                    <span class="detail-value">#@Model.OrderNumber</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.OrderName))
                {
                    <div class="detail-row">
                        <span class="detail-label">Sipariş</span>
                        <span class="detail-value">@Model.OrderName</span>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <div class="detail-row">
                        <span class="detail-label">E-posta</span>
                        <span class="detail-value">@Model.Email</span>
                    </div>
                }
                <div class="detail-row">
                    <span class="detail-label">Kripto Para</span>
                    <span class="detail-value">@Model.CryptoCurrency</span>
                </div>
            </div>
            
            <div class="footer-section">
                <p class="footer-text">
                    <i class="ri-shield-check-line"></i>
                    Güvenli ödeme sistemi
                </p>
                <a href="/invoices" class="back-link">
                    <i class="ri-arrow-left-line"></i>
                    Faturalara Dön
                </a>
            </div>
        </div>
    </div>
    
    <script>
        // Adresi kopyala
        function copyAddress() {
            const address = document.getElementById('wallet-address').textContent;
            navigator.clipboard.writeText(address).then(() => {
                const btn = document.querySelector('.copy-btn');
                const text = document.getElementById('copy-text');
                btn.classList.add('copied');
                text.textContent = 'Kopyalandı!';
                
                setTimeout(() => {
                    btn.classList.remove('copied');
                    text.textContent = 'Kopyala';
                }, 2000);
            });
        }
        
        // Geri sayım
        @if (Model.Status == "pending" && Model.ExpireTime.HasValue)
        {
            <text>
            const expireTime = new Date('@Model.ExpireTime.Value.ToString("yyyy-MM-ddTHH:mm:ss")Z').getTime();
            
            function updateCountdown() {
                const now = new Date().getTime();
                const distance = expireTime - now;
                
                if (distance < 0) {
                    document.getElementById('countdown').textContent = 'Süre Doldu';
                    location.reload();
                    return;
                }
                
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                document.getElementById('countdown').textContent = 
                    String(minutes).padStart(2, '0') + ':' + String(seconds).padStart(2, '0');
            }
            
            updateCountdown();
            setInterval(updateCountdown, 1000);
            </text>
        }
        
        // Ödeme durumu kontrolü (her 10 saniyede)
        @if (Model.Status == "pending")
        {
            <text>
            setInterval(() => {
                fetch('/api/invoices/status/@Model.InvoiceId')
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'completed') {
                            location.reload();
                        }
                    })
                    .catch(err => console.log('Status check failed'));
            }, 10000);
            </text>
        }
    </script>
</body>
</html>
